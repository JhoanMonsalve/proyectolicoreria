<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú de Aguardientes</title>
    <link rel="icon" href="/img/momentosgratos.jpeg" type="image/jpeg">
    <link rel="stylesheet" href="/css/aguardiente.css">
</head>
<body>
    <header>
        <h1>Aguardientes</h1>
        <nav>
            <ul>
                <li><a href="/productos">Inicio</a></li>
            </ul>
        </nav>
    </header>

    <!-- Sección para aguardientes de litro -->
    <section id="productos-litro" class="productos">
        <h2 class="titulo-principal">Litro Aguardiente</h2>
        <div class="producto" id="aguardiente-azul">
            <img class="img-producto" src="/img/aguardiente/aguardientetapaazul.jpg" alt="Aguardiente Tapa Azul Litro">
            <h3>Aguardiente Tapa Azul Litro</h3>
            <p>$110.000</p>
            <button class="btn-comprar">Ver Producto</button>
        </div>

        <div class="producto" id="aguardiente-rojo">
            <img class="img-producto" src="/img/aguardiente/aguardientetaparoja.png" alt="Aguardiente Tapa Roja Litro">
            <h3>Aguardiente Tapa Roja Litro</h3>
            <p>$110.000</p>
            <button class="btn-comprar">Ver Producto</button>
        </div>

        <div class="producto" id="aguardiente-verde">
            <img class="img-producto" src="/img/aguardiente/aguardientetapaverde.jpeg" alt="Aguardiente Tapa Verde Litro">
            <h3>Aguardiente Tapa Verde Litro</h3>
            <p>$100.000</p>
            <button class="btn-comprar">Ver Producto</button>
        </div>
    </section>

    <!-- Sección para aguardientes de media -->
    <section id="productos-media" class="productos">
        <h2 class="titulo-principal">Media Aguardiente</h2>
        <div class="producto" id="aguardiente-azul-media">
            <img class="img-producto" src="/img/aguardiente/aguardientemediaazul.png" alt="Aguardiente Tapa Azul Media">
            <h3>Aguardiente Tapa Azul Media</h3>
            <p>$60.000</p>
            <button class="btn-comprar">Ver Producto</button>
        </div>

        
        <div class="producto" id="aguardiente-rojo-media">
            <img class="img-producto" src="/img/aguardiente/aguardientemediaroja.png" alt="Aguardiente Tapa Roja Media">
            <h3>Aguardiente Tapa Roja Media</h3>
            <p>$60.000</p>
            <button class="btn-comprar">Ver Producto</button>
        </div>
        
        <div class="producto" id="aguardiente-verde-media">
            <img class="img-producto" src="/img/aguardiente/aguardientemediaverde.png" alt="Aguardiente Tapa Verde Media">
            <h3>Aguardiente Tapa Verde Media</h3>
            <p>$60.000</p>
            <button class="btn-comprar">Ver Producto</button>
        </div>
    </section>

    <!-- Modal -->
    <div id="modal-producto" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modal-title"></h2>
            <img id="modal-image" src="" alt="Imagen del Producto">
            <p id="modal-price"></p>
            <p id="modal-description"></p>
        </div>
    </div>

    <footer>
        <p>&copy; Menú Aguardientes</p>
    </footer>

    <script src="/js/aguardiente.js"></script>
</body>
</html>
